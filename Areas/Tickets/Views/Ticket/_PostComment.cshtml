@using (Html.BeginForm("PostComment", "Ticket", new { area = "Tickets", id = Model.TicketId }, FormMethod.Post))
{		
    
    <div class="clear">
    </div>

    <div style="float: left; padding-bottom: 10px; padding-top: 12px;">
        <div style="float: left; padding-right: 4px;">
            <img src="@Url.Content(BetterTaskList.Helpers.UserHelpers.GetUserAvatarUrl(User.Identity.Name, "32x32"))" height="30px" width="32px" alt="action avatar" />
        </div>
        <div style="float: left;">
            @Html.TextBox("TicketCommentDetails", null, new { @style = "width:575px; color:#999999; border: 1px solid #CCCCCC; height:26px;" })
        </div>
        @*<div style="float: left; text-align: right; width: 612px; padding-left: 4px; padding-bottom: 2px;">
            <input type="submit" id="SubmitComment" value="Post" />
        </div>*@
    
    <div class="clear"></div>

    </div>

}
<script src="@Url.Content("~/Scripts/jquery.watermark.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $("#TicketCommentDetails").watermark("Enter your comment and press ENTER. Remember be polite and courteous to others.", "watermark");
    });

</script>
