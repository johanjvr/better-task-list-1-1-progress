
<div class="clear"></div>

<div style="float:left; padding-bottom:10px;" >

    <div style="float:left; padding-right:4px;">
        <img src="@Url.Content("~/Content/Avatars/Default_32x32.png")" alt="action avatar" />
    </div>

    <div style="float:left;">
        @Html.TextBox("Status", null, new { @Style ="height:28px; font-size:14px; width:490px;"})
    </div>

    <div style="float:left; padding-left:4px; padding-bottom:2px;">
        <input type="button" id="Share" value="Share" />
    </div>

</div>

<div class="clear"></div>


<script src="@Url.Content("~/Scripts/jquery.watermark.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(function () {
        $("#Status").watermark("What are you working on? Share ideas, links, updates.", "watermark");
        $("#Share").button();
    });

</script>

