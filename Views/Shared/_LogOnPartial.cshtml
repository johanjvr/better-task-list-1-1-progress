@if(Request.IsAuthenticated) {
    <text>Welcome <b>@BetterTaskList.Helpers.UserHelpers.GetUserFullName(User.Identity.Name)</b> &nbsp; &nbsp;
    @Html.ActionLink("My Account", "Welcome", "Account", new { area = "" }, null) &nbsp; &nbsp;
    @Html.ActionLink("Log Off", "LogOff", "Account", new { area = "" }, null) 
    </text>
}
else
{
    @: @Html.ActionLink("Sign in", "LogOn", "Account", new { area = "" }, null) or @Html.ActionLink("register", "Register", "Account", new { area = "" }, null)
}
