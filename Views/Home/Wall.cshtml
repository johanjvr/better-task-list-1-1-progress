@model BetterTaskList.Models.Profile
           
@{
    ViewBag.Title = "Progress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="width:615px; padding-right:8px; float:left;">

    <div style="float: left; height: 128px; width: 128px;">
        <img src="@Url.Content(BetterTaskList.Helpers.UserHelpers.GetUserAvatarUrl(Model.UserId, "128x128"))" alt="avatar" height="128px" width="128px" />
    </div>


    <div style="float:left; " >
    
     @*<h3 class="extra"><span><span>Geovani Martinez</span></span></h3>*@

     @* <div style="float:left; padding-right:4px;">
        <img src="@Url.Content("~/Content/Avatars/Default_32x32.png")" alt="action avatar" />
        </div>
     *@

     <div style="font-size:20px; font-weight:bold; color:#1C2A47; padding-bottom:8px;">@Model.FullName</div>

