@model BetterTaskList.Models.LogOnModel

@{
    ViewBag.Title = "Log On";
}

<div style="float:left; width:56%;">
&nbsp;
</div>

@using (Html.BeginForm()) {
    
    <div style="float:left; width:40%;">

            <div class="editor-label">
                @Html.Label("Email adress")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName, new { @Style = "width:410px; height:26px;"})
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password, new { @Style = "width:410px; border: 1px solid #CCCCCC; height: 26px;" })
            </div>

            <div class="editor-label">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>

            <div>
                @Html.ValidationSummary(false, "")
            </div>

            
            <div style="text-align:right; width:410px;">
            <p>
                <input type="submit" id="SignIn" value="Log On" /> or @Html.ActionLink("Register", "Register")
            </p>
            </div>

            <div style=" margin-top:20px; width:410px; padding:20px 0px 20px 4px; background-color:#FCF0BA; border:1px solid #E8E1B5;">
               Forgot your password? No worries it happens. Just @Html.ActionLink("reset", "ResetPassword", "Account") it.
            </div>

    </div>
    
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(function () {
        $("#SignIn").button();
    });
</script>