@model BetterTaskList.Models.LogOnModel

@{
    ViewBag.Title = "Log On";
}

    <div style="float:left; width:550px;">
<h3><span><span>Recently</span></span></h3>
    @for (int i = 0; i < 2; i++)
    {
        <div style="border-bottom: 1px solid #CCC; padding-top:8px; padding-bottom:8px;">

    <div id="actionAvatar" style="float:left; padding-right:4px;">
        <img src="@Url.Content("~/Content/Images/Comments.png")" alt="action avatar" />
    </div>

    <div style="float:left; font-size:12px;">
        @Html.ActionLink("Geovani Martinez", "Index", "Home") <b>commented</b> on ticket @Html.ActionLink("#75", "Index", "Home") about <b>22 minutes ago</b>.
    </div>
    
    <div class="clear"></div>

    <div style="float:left; width:32px; padding-top:6px;">
        <img src="@Url.Content("~/Content/Images/vcard_32x32.png")" alt="avatar"/>
    </div>

    <div style="float:left; padding-left:14px; padding-top:6px; width:90%; ">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam justo ante, auctor et auctor sed, vestibulum quis arcu. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Suspendisse suscipit, odio nec convallis hendrerit, eros elit tristique risus, eu porttitor lectus ante ut quam. Aenean scelerisque suscipit feugiat. In tristique viverra tortor, ut tincidunt felis facilisis sed
    </div>

   <div class="clear"></div>

   </div>
    }
</div>


@using (Html.BeginForm()) {
    
    <div style="float:left; padding-left:22px;">
@Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName, new { @Style = "width:320px;" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password, new { @Style = "width:320px; border: 1px solid #CCCCCC; height: 26px;" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="editor-label">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>
            
            <div style="text-align:right;">
            <p>
                <input type="submit" id="SignIn" value="Log On" /> or @Html.ActionLink("Register", "Register")
            </p>
            </div>

            <div style=" margin-top:20px; padding:20px 4px;; background-color:#FCF0BA; border:1px solid #E8E1B5;">
               Forgot your password? it happens. Just @Html.ActionLink("reset", "ResetPassword", "Account") it.
            </div>

    </div>
    
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(function () {
        $("#SignIn").button();
    });
</script>