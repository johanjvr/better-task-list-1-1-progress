@model BetterTaskList.Models.Profile
           
           
@{
    ViewBag.Title = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3><span><span>Personalize your account</span></span> </h3>
<p>Others will want to communicate with you, make it easier for them to reach you by personalising your account details below.</p>

@using (Html.BeginForm("ChangePicture", "Account", FormMethod.Post, new { enctype = "multipart/form-data"}))
{

<div style="float:left; width:300px;">

 <img src="@Url.Content(Model.Picture128x128Url)" alt="@Model.FullName" />
 
 <input type="file" name="file1" id="file1" style="width:100%;" />
         <div style="padding-left:40px;">
         <input type="submit" id="Upload" value="Save" />
         </div>
</div>

}


<div style="float:left; width:592px;">
@using (Html.BeginForm()) {
    
    @Html.ValidationSummary(true)

    <div style="float:left; width:293px; padding-right:6px;"> 
        <div class="editor-label">
            @Html.Label("First name")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.FirstName, new { @Style="width:293px;" })
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>
    </div>

    <div style="float:left; width:293px;">
        <div class="editor-label">
            @Html.Label("Last name")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.LastName, new { @Style="width:293px;" })
            @Html.ValidationMessageFor(model => model.LastName)
        </div>
    </div>
    
        <div class="clear"></div>
    
    <div style="float:left; width:293px; padding-right:6px; padding-top:10px;" >
        <div class="editor-label">
            @Html.Label("Work Phone Number")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.WorkPhoneNumber, new { @Style = "width:293px;" })
            @Html.ValidationMessageFor(model => model.WorkPhoneNumber)
        </div>
    </div>
    
     <div style="float:left; width:293px; padding-top:10px;">
        <div class="editor-label">
            @Html.Label("Cell Phone Number (optional)")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.CellPhoneNumber, new { @Style = "width:293px;" })
            @Html.ValidationMessageFor(model => model.CellPhoneNumber)
        </div>
    </div>

    <div class="clear"></div>
    
    <div style="padding-top:13px; padding-left:20px; text-align:right;">
            <input type="submit" id="Next" value="Save" /> @*or @Html.ActionLink("Skip", "Index")*@
    </div>
}

</div>

<script type="text/javascript">
    $(function () {
        $("#Next").button();
        $("#Upload").button();
    });
</script>