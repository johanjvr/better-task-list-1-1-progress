@model BetterTaskList.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}

<div style="float:left; width:200px;">

<img src="@Url.Content("~/Content/Images/img1_4.jpg")" /> 

</div>

<div style="float:left;">

@using (Html.BeginForm()) {

  
    
    <div style=" padding-left:338px;">

            <div class="editor-label">
                @Html.LabelFor(m => m.FirstName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.FirstName, new { @Style = "Height: 26px; Width: 340px" } )
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.LastName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.LastName, new { @Style = "Height: 26px; Width: 340px" } )
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Email, new { @Style = "Height: 26px; Width: 340px" } )
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password) (minimum of @ViewBag.PasswordLength characters in length)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password, new { @Style = "border: 1px solid #CCCCCC; Height: 26px; Width: 340px" }) 
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.ConfirmPassword)
            </div>

            <div class="editor-field">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @Style = "border: 1px solid #CCCCCC; Height: 26px; Width: 340px" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>

            <div>
                @Html.ValidationSummary(false, "")
            </div>


            <div style="width:340px; text-align:right; padding-top:6px;">
                <input type="submit" id="Register" value="Register" /> or @Html.ActionLink("Sign in", "Logon")
            </div>
    </div>
}

</div>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


<script>
    $(function () {
        $("#Register").button();
    });
</script>
