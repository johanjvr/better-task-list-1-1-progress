@model BetterTaskList.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}

<div style="float:left; width:455px;">

<ul>
    <li>Email support</li>
    <li>Upgrade, downgrade or cancel at any time</li>
</ul>

</div>

<div style="float:left;">

@using (Html.BeginForm()) {

    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
    
    <div style=" padding-left:96px;">

            <div class="editor-label">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Email, new { @Style = " border: 1px solid #CCCCCC; Height: 26px; Width: 340px" } )
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password) (minimum of @ViewBag.PasswordLength characters in length)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password, new { @Style =" border: 1px solid #CCCCCC; Height: 26px; Width: 340px" }) 
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.ConfirmPassword)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @Style = " border: 1px solid #CCCCCC; Height: 26px; Width: 340px" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>

            <div style="width:340px; text-align:right; padding-top:6px;">
                <input type="submit" id="Register" value="Register" />
            </div>
    </div>
}

</div>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


<script>
    $(function () {
        $("#Register").button();
    });
</script>
